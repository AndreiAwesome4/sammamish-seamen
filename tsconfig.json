{
  // TODO: evaluate and selectively apply these rules: https://github.com/palantir/tslint/blob/master/tslint.json
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "importHelpers": true,
    "jsx": "react",
    "alwaysStrict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitThis": false,
    "resolveJsonModule": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "strict": true
  },
  "include": [
    "src/**/*",
    "__tests__/**/*"
  ]
}